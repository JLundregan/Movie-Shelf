{
  "name": "MovieShelf",
  "version": "1.1.0",
  "description": "A page to document all of the movies in my library, whether digital or physical",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "make": "electron-packager .",
    "package-win": "electron-packager . ",
    "package-mac": "electron-packager . --platform=darwin --arch=x64",
    "package-linux": "--platform=linux --arch=x64",
    "publish": "node build.js"
  },
  "author": "JLundregan",
  "license": "ISC",
  "dependencies": {
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "electron-winstaller": "^5.0.0",
    "express": "^4.17.1",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.12",
    "vercel": "^24.0.0"
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-packager": "^15.4.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "movieshelf"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "JLundregan",
              "name": "Movie-Shelf"
            }
          }
        }
      ]
    }
  }
}
