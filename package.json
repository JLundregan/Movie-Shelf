{
  "name": "MovieShelf",
  "version": "1.1.0",
  "description": "A page to document all of the movies in my library, whether digital or physical",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --mac --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/JLundregan/Movie-Shelf.git"
  },
  "build": {
    "appId": "MovieShelf",
    "win": {
      "target":[
        "nsis"
      ],
      "icon": "images/icon.ico"
    },
    "mac": {
      "icon": "images/icon.ico"
    },
    "nsis": {
      "oneClick": "false",
      "installerIcon": "images/icon.ico",
      "uninstallerIcon": "images/icon.ico",
      "uninstallDisplayName": "MovieShelf-Uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": "true"
    }
  },
  "author": "JLundregan",
  "license": "ISC",
  "dependencies": {
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.12",
    "vercel": "^24.0.0"
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.14.13"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "movieshelf"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "JLundregan",
              "name": "Movie-Shelf"
            }
          }
        }
      ]
    }
  }
}
